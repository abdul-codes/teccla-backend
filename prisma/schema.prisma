generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model OtpVerification {
  id      String   @id @default(cuid())
  otp     String   @unique
  expires DateTime
  userId  String
  User    User     @relation(fields: [userId], references: [id])

  @@unique([userId, otp])
}

model OtpAttempts {
  id        String   @id @default(cuid())
  attempts  Int      @default(0)
  lastTry   DateTime @default(now())
  userId    String @unique
  User      User     @relation(fields: [userId], references: [id])
}

model Project {
  id          String    @id @default(cuid()) @unique
  title       String    @unique
  description String
  location    String
  budget       Float
  type        String
  files       String[]
  images      String[]
  status     ProjectStatus
  startDate   DateTime?
  finishDate  DateTime?
  createdAt  DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  createdBy   User        @relation(fields: [createdById], references: [id])
  createdById String 

}

model User {
  id              String            @id @default(cuid()) @unique
  email           String            @unique
  phoneNumber     String?           @unique
  password        String
  firstName       String
  lastName        String
  profilePicture  String?
  role            UserRole          @default(USER)
  companyName     String?
  companyRole     String?
  address         String?
  city            String?
  state           String?
  country         String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  lastLogin       DateTime?
  loginAttempts   Int               @default(0)
  OtpAttempt     OtpAttempts?
  emailVerified   DateTime?
  userAccountId   String?           @unique
  OtpVerification OtpVerification[]
  project           Project[]

  @@unique([email, phoneNumber, userAccountId])
  @@index([email, role, userAccountId])
}

enum UserRole {
  ADMIN
  USER
}



enum ProjectStatus {
  planning
   inprogress
    completed
}